<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:orientation="horizontal"
        android:background="@color/n1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:gravity="center"
            android:fontFamily="sans-serif"
            android:text="difficulte carte   "
            android:textSize="30dp"

            android:textColor="#FFFFFF"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/idcarte"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:gravity="center"
            android:id="@+id/diffcarterep"
            android:textSize="40dp"
            android:text=""
            android:textColor="#FFFFFF"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/n2"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:gravity="center"
            android:text="id carte"
            android:textSize="25dp"

            android:textColor="#FFFFFF"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cercle"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:id="@+id/idcarterep"
            android:text="2"
            android:textColor="#FFFFFF"

            android:textSize="40dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="124dp"
            android:id="@+id/textviewrep"
            android:layout_gravity="top"
            android:text="dreponse"
            android:textSize="40dp"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="top"
            android:textStyle="bold"
            android:textAlignment="center"
            android:background="#ffffff"
            android:fontFamily="sans-serif-condensed" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/n3"
        android:weightSum="1">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/n1"
            android:text="boite1"
            android:id="@+id/boite1"
            android:textSize="15sp"
            android:drawableLeft="@drawable/ic_check_circle_white_18dp"
            android:layout_weight="0.26" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.31"
            android:text="boite2"
            android:id="@+id/boite2"
            android:textSize="15sp"
            android:background="@color/n2"
            android:drawableLeft="@drawable/ic_check_circle_white_18dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/n3"
            android:text="boite3"
            android:id="@+id/boite3"
            android:textSize="15sp"
            android:drawableLeft="@drawable/ic_check_circle_white_18dp"
            android:layout_weight="0.28" />
    </LinearLayout>

</LinearLayout>
</FrameLayout>