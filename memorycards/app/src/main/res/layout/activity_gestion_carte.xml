<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_gestion_carte"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/fondecran"
    tools:context="com.example.nautilius.memorycards.GestionCarte">
    <!-- Load the toolbar here -->
    <include
        layout="@layout/toolbar_main"/>

    <!-- Rest of content for the activity -->


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="Ajouter une carte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ajoutcarte"
            android:textSize="15sp"
            android:background="@color/colorPrimary"
            android:maxWidth="200dp"
            android:width="3000dp"
            android:drawableLeft="@drawable/ic_touch_app_white_18dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:text="Ajouter theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:textSize="15sp"
            android:background="@color/colorPrimary"
            android:drawableLeft="@drawable/ic_touch_app_white_18dp"
            android:maxWidth="200dp"
            android:width="3000dp"
            android:layout_above="@+id/ajoutcarte"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="15dp" />

        <Button
                android:text="Supprimer un jeu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            android:id="@+id/suppjeu"
                android:textSize="15sp"
                android:background="@color/colorPrimary"
                android:drawableLeft="@drawable/ic_touch_app_white_18dp"
            android:maxWidth="200dp"
            android:width="3000dp"
            android:layout_marginTop="67dp"
            android:layout_alignTop="@+id/ajoutcarte"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:text="CrÃ©er un jeu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/creerjeu"
            android:textSize="15sp"
            android:background="@color/colorPrimary"
            android:drawableLeft="@drawable/ic_touch_app_white_18dp"
            android:maxWidth="200dp"
            android:width="3000dp"
            android:layout_marginBottom="13dp"
            android:layout_above="@+id/button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>


</RelativeLayout>
